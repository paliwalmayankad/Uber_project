<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/coordinatorLayout"
    tools:context="aaronsoftech.in.nber.Activity.From_Location">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/colorPrimary"
            android:elevation="0dp"
            android:gravity="center_vertical"
            android:minHeight="?attr/actionBarSize"
            android:popupTheme="@style/AppTheme.PopupOverlay"
            android:theme="@style/AppYellowTheme">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/toolbar_title"
                    style="?android:textAppearanceLarge"
                    android:layout_width="0dp"
                    android:text="Set Location"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".7"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
            </LinearLayout>

        </android.support.v7.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:background="@color/colorPrimary"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="1"
                            android:layout_marginRight="4dp"
                            android:background="@android:color/white"
                            android:layout_marginEnd="4dp"
                            >


                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_marginRight="4dp"
                                android:clipToPadding="false"
                                android:elevation="5dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:outlineProvider="bounds"
                                android:layout_marginEnd="4dp"
                                android:layout_marginStart="4dp">

                                <TextView
                                    android:id="@+id/et_location"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:cursorVisible="true"
                                    android:hint="From address here"
                                    android:inputType="text|textNoSuggestions"
                                    android:padding="5dp"

                                    android:singleLine="true"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@android:color/black"
                                    android:textColorHint="@android:color/darker_gray"

                                    />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:src="@drawable/ic_mapplace"
                                    android:id="@+id/find_location"
                                    android:visibility="gone"
                                    android:layout_height="30dp" />
                                <fragment
                                    android:id="@+id/place_autocomplete_fragment"
                                    android:layout_width="40dp"
                                    android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                                    android:layout_height="match_parent" />
                            </LinearLayout>
                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:paddingLeft="5dp"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginBottom="3dp"
                            android:layout_marginRight="4dp"
                            android:background="@android:color/white"
                            android:layout_marginEnd="4dp"
                           >


                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_marginRight="4dp"
                                android:clipToPadding="false"
                                android:elevation="5dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:outlineProvider="bounds"
                                android:layout_marginEnd="4dp"
                                >


                                <TextView
                                    android:id="@+id/et_location2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="@drawable/login_et_rectangle1"
                                    android:cursorVisible="true"
                                    android:hint="To address here"
                                    android:inputType="text|textNoSuggestions"
                                    android:padding="5dp"
                                    android:singleLine="true"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@android:color/black"
                                    android:textColorHint="@android:color/darker_gray"
                                    android:windowSoftInputMode="stateHidden" />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:src="@drawable/ic_mapplace"
                                    android:visibility="gone"
                                    android:id="@+id/find_location2"
                                    android:layout_height="30dp" />
                                <fragment
                                    android:id="@+id/place_autocomplete_fragment2"
                                    android:layout_width="40dp"
                                    android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                                    android:layout_height="match_parent" />
                            </LinearLayout>
                        </FrameLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>




            <fragment
                android:id="@+id/googleMap"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/pin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@null"
                    android:paddingBottom="27dp"
                    android:src="@drawable/ic_map_pin" />
            </fragment>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
       android:layout_weight="1"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_calander"
            ></include>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/edittext"
        android:gravity="center"
        android:padding="7dp"
        android:singleLine="true"
        android:text="Search"
        android:textStyle="bold" />


      <Gallery
        android:id="@+id/gallery"
        android:layout_margin="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
           />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/recycle_vehicle_Select_list"
        android:visibility="gone"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="11dp"
        android:id="@+id/layout_btn_order"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_book_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@drawable/border_line_yellow"
            android:gravity="center"
            android:padding="7dp"
            android:singleLine="true"
            android:textSize="20dp"
            android:text="Book now"
            android:textColor="@android:color/black"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txt_book_later"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textSize="20dp"
            android:layout_weight="1"
            android:background="@drawable/border_line_yellow"
            android:gravity="center"
            android:padding="7dp"
            android:singleLine="true"
            android:text="Book later"
            android:textColor="@android:color/black"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>
