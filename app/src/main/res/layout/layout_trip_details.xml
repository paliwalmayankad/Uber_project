<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    app:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/vehicle_type_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:civ_border_width="2dp"
                android:foregroundGravity="center"
            android:layout_centerHorizontal="true"
            app:civ_border_overlay="true"
            app:civ_border_color="@color/colorPrimaryDark"
            android:src="@drawable/profile_pics" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/vehicle_driver"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:civ_border_width="2dp"
            android:foregroundGravity="center"
            app:civ_border_overlay="true"
            app:civ_border_color="@color/colorPrimaryDark"
            android:src="@drawable/profile_pics" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignBottom="@+id/vehicle_type_img"
        android:background="@drawable/common_google_signin_btn_text_light_normal_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="11dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="11dp">

            <TextView
                android:id="@+id/txt_veh_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tempo"
                android:textColor="@color/overlay_dark_90"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/txt_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tempo"
                android:textColor="@color/overlay_dark_60"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/txt_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tempo"
                android:maxLines="2"
                android:textColor="@color/overlay_dark_60"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/txt_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tempo"
                android:maxLines="2"
                android:textColor="@color/overlay_dark_60"
                android:textSize="16dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Cash"
                    android:textSize="17dp"
                    android:textColor="@color/background_splash"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="   Success"
                    android:textSize="17dp"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rupee_sign"
                        android:id="@+id/price"
                        android:textSize="18dp"
                        android:textColor="@color/overlay_dark_60" />
                    <TextView
                        android:id="@+id/txt_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price: "
                        android:textSize="18dp"
                        android:textColor="@color/overlay_dark_60" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/layoutbaundry"></View>
</LinearLayout>