<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="5dp"
        app:cardPreventCornerOverlap="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="11dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80dp"
                    android:id="@+id/driver_veh"
                    app:civ_border_overlay="true"
                    app:civ_border_width="1dp"
                    app:civ_circle_background_color="@color/colorPrimaryDark"
                    app:civ_border_color="@color/colorPrimaryDark"
                    android:src="@drawable/default_user_profile_img"
                    android:layout_height="80dp" />
                <TextView
                    android:layout_width="80dp"
                    android:id="@+id/driver_veh2"
                    android:layout_margin="11dp"
                    android:background="@android:drawable/ic_menu_call"
                    android:layout_height="80dp" >
                </TextView>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:hint="Driver name"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:id="@+id/txt_name"
                    android:textColor="@color/grey_800"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:hint="Driver Mobile no"
                    android:layout_gravity="center"
                    android:id="@+id/txt_mobile"
                    android:textSize="14dp"
                    android:textColor="@color/grey_600"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <RatingBar
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        style="?android:attr/ratingBarStyleSmall"
                        android:numStars="5"
                        android:stepSize="0.1"

                        android:layout_gravity="center"
                        android:isIndicator="true" />
                    <TextView
                        android:layout_width="match_parent"
                        android:hint="Amount"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:id="@+id/txt_amount"
                        android:textColor="@color/grey_600"
                        android:layout_height="match_parent" />

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:hint="Vehicle no"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:id="@+id/txt_veh_no"
                    android:textColor="@color/grey_600"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:id="@+id/driver_img"
                app:civ_border_overlay="true"
                app:civ_border_width="1dp"
                app:civ_circle_background_color="@color/colorPrimaryDark"
                app:civ_border_color="@color/colorPrimaryDark"
                android:src="@drawable/default_user_profile_img"
                android:layout_height="80dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
