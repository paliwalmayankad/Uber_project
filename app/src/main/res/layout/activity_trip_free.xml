<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aaronsoftech.in.unber.Activity.Trip_free">


        <TextView
            android:layout_width="match_parent"
            android:text="Free trips "
            android:textSize="22dp"
            android:gravity="center"
            android:id="@+id/toolbar"
            android:background="@color/colorPrimary"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_height="44dp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="match_parent"
                android:text="Send free trips to your friends &amp; family"
                android:layout_margin="22dp"
                android:textSize="23dp"
                android:id="@+id/txt_send_freecode"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_below="@+id/toolbar"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:text="Share the nber code and give friends &amp; family free nber rides,worth up to u25 each !"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="22dp"
                android:textSize="20dp"
                android:textColor="@color/layoutbaundry"
                android:id="@+id/txt_send_freecode_ans"
                android:textStyle="bold"
                android:layout_below="@+id/txt_send_freecode"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:text="How invitation works ?"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="22dp"
                android:textSize="20dp"
                android:id="@+id/txt_code_invitation"
                android:textStyle="bold"
                android:layout_below="@+id/txt_send_freecode_ans"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:text="Simply just share code with friends &amp; family and they just need to apply that code in their nber app."
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="22dp"
                android:textSize="20dp"
                android:textColor="@color/layoutbaundry"
                android:id="@+id/txt_invitationans"
                android:textStyle="bold"
                android:layout_below="@+id/txt_code_invitation"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:text="Share your invitation code"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="22dp"
                android:textSize="20dp"
                android:id="@+id/txt_share"
                android:textStyle="bold"
                android:layout_below="@+id/txt_invitationans"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_margin="22dp"
                android:background="@drawable/edit_text"
                android:layout_below="@+id/txt_share"
                android:gravity="center_vertical"
                android:layout_height="55dp">
                <TextView
                    android:layout_width="match_parent"
                    android:text="GHJLI"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:paddingLeft="22dp"
                    android:gravity="left|center"
                    android:textStyle="bold"
                    android:textColor="@color/background_splash"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="22dp"
                    android:textSize="22dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:src="@drawable/ic_share"
                    android:padding="11dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_margin="22dp"
                android:gravity="center_vertical"
                android:layout_height="55dp"
                android:id="@+id/linearLayout">
                <TextView
                    android:layout_width="match_parent"
                    android:text="WHATSAPP"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:background="@drawable/edittext"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="22dp"
                    android:textSize="22dp"
                    android:layout_weight="2"
                    android:background="@drawable/edittext"
                    android:gravity="center_vertical"
                    android:src="@drawable/back_arrow"
                    android:padding="11dp"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
